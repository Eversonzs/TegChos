<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="hn.tictanes.tegchos.IngresoSolicitud$PlaceholderFragment">

    <EditText android:hint="@string/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNombre"
        />
    <EditText
        android:hint="@string/etDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etDireccion"
        />
    <EditText
        android:hint="@string/etTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTelefono"
        />
    <EditText
        android:hint="@string/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCorreo"
        />
    <EditText
        android:hint="@string/etObservacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etObservacion"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
    <ImageButton
        android:id="@+id/imgButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="100dp"
        android:src="@drawable/abc_popup_background_mtrl_mult"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        >
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnEnviarSolicitud"
            android:text="Enviar"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_enviar_solicitud"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:elevation="10dp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>