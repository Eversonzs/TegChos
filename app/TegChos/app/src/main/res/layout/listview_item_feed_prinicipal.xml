<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="5dp"
    android:background="@drawable/bg_card"
    android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/tvId"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rosa martinez"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tvNombre"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/10/1985"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tvFechaConstruccion"
            android:textColor="@color/textoClaro"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15"
                android:drawableLeft="@drawable/metro"
                android:gravity="center"
                android:id="@+id/tvMetros"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="18"
                android:drawableLeft="@drawable/people"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/tvBeneficiarios"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="36"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableLeft="@drawable/iconotejado"
                android:id="@+id/tvDonacionLaminas"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Villa Nueva"
        android:id="@+id/tvColonia"
        android:layout_marginBottom="10dp"
        android:capitalize="words"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerca de donde donia Chepa"
        android:id="@+id/tvDireccion"
        android:visibility="gone"
        android:textSize="15dp"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/ivTecho"
        android:background="@drawable/imagentecho"/>
    </LinearLayout>